@page "{id:int}"
@using ClaasDemo2021FisrtRazor.model
@model ClaasDemo2021FisrtRazor.Pages.Kager.EditKageModel
@{
    ViewData["Title"] = "Ændre en Kage";
}

<div class="container">
    <h1>Du kan nu ændre på en kage </h1>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <input type="hidden" asp-for="Kage.Id"/>
                <div asp-validation-summary="All" class="alert-danger"></div>

                <div class="form-group">
                    <label>NAVN</label>
                    <input type="text" asp-for="Kage.Navn" class="form-control"/>
                    <span asp-validation-for="Kage.Navn" class="alert-danger"></span>
                </div>

                <div class="form-group">
                    <label>PRIS</label>
                    <input type="text" asp-for="Kage.Pris" class="form-control"/>
                    <span asp-validation-for="Kage.Pris" class="alert-danger"></span>
                </div>

                <div class="form-group">
                    <label>SLAGS</label>
                    @*<input type="text" asp-for="Kage.Slags" class="form-control" />*@
                    <select name="Kage.Slags" asp-for="Kage.Slags" class="form-control">
                        @foreach (var slags in Enum.GetValues(typeof(KageSlagsType)))
                        {
                            <option value="@slags">@slags</option>
                        }


                    </select>
                </div>


                <div class="form-group">
                    <input type="submit" value="Opdater" class="btn btn-primary"/>
                </div>

            </form>
        </div>
    </div>
</div>
